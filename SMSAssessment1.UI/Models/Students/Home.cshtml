@model IEnumerable<SMSAssessment1.UI.Model.DTO.StudentDto>
@{
}
<h1 class="mt-3">Student Information</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Students" asp-action="Add">Add Student</a>
</div>

<table class="table table-border">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Student Email</th>
            <th>Department</th>
            <th>Icon</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName  @student.LastName</td>
                <td>@student.Email</td>
                <td>@student.DepartmentName</td>
                <td>
                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>